{
  "name": "lcars-system-monitor",
  "version": "0.1.0",
  "description": "LCARS-themed real-time system monitor",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:server\" \"npm:dev:client\"",
    "dev:server": "nodemon --watch src/server src/server/index.js",
    "dev:client": "vite --config vite.config.js",
    "start": "node src/server/index.js",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "verify": "node scripts/smoke-test.js"
  },
  "keywords": ["lcars", "system-monitor", "sse"],
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "pino": "^9.6.0",
    "systeminformation": "^5.23.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "eslint": "^9.18.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.4.0",
    "vite": "^6.0.0"
  }
}
